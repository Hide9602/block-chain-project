# MetaSleuth NextGen - Environment Variables Template

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================
# File: frontend/.env.local

# Backend API URL (use your Railway deployment URL)
NEXT_PUBLIC_API_URL=https://your-backend.railway.app

# Optional: Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================
# File: backend/.env or Railway Dashboard

# Security (REQUIRED)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-at-least-32-characters-long

# Environment
ENVIRONMENT=production
DEBUG=false

# CORS (REQUIRED - Add your Vercel URL)
CORS_ORIGINS=https://your-frontend.vercel.app

# Database (Auto-generated by Railway)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis (Auto-generated by Railway)
REDIS_URL=redis://host:6379/0

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Blockchain API Keys
ETHERSCAN_API_KEY=your-etherscan-api-key
INFURA_PROJECT_ID=your-infura-project-id
