# Environment
ENVIRONMENT=development  # development, staging, production

# Application
PROJECT_NAME=MetaSleuth NextGen API
API_VERSION=1.0.0
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=metasleuth
POSTGRES_PASSWORD=metasleuth_password
POSTGRES_DB=metasleuth_db

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Blockchain APIs
ETHERSCAN_API_KEY=your_etherscan_api_key
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Storage
UPLOAD_DIR=/tmp/metasleuth/uploads
REPORT_DIR=/tmp/metasleuth/reports
MAX_UPLOAD_SIZE=10485760  # 10MB

# Report Generation
REPORT_TIMEOUT_SECONDS=300
REPORT_MAX_NODES=10000
REPORT_MAX_HOPS=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Machine Learning
ML_MODEL_PATH=/app/models
ML_DEVICE=cpu  # cpu, cuda, mps
ML_BATCH_SIZE=32

# Pattern Recognition
PATTERN_CONFIDENCE_THRESHOLD=0.8
RISK_SCORE_THRESHOLD_HIGH=80
RISK_SCORE_THRESHOLD_MEDIUM=50

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# Debug
DEBUG=false
